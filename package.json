{
  "name": "a-minimal-ts",
  "description": "A test Typescript libary that has minimal functionality",
  "version": "1.0.6",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "lint": "npx eslint \"src/**/*.{ts,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm test",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json",
    "upg": "npx npm-check-updates --interactive"
  },
  "type": "module",
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "skeleton",
    "template",
    "ts",
    "typescript",
    "minimal",
    "demo",
    "getting started",
    "eslint",
    "prettier",
    "jest"
  ],
  "author": "Bigman73 (https://github.com/bigman73)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigman73/minimal-ts.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-plugin-jsdoc": "^39.6.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.3.1",
    "npm-check-updates": "^16.3.18",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
